<% if !user_signed_in? %>
<div class="jumbotron">
  <h1>Your Favourite Christian Movies</h1>
  <p>Review your favourite Christian movies here and let promote the gospel to our friends.</p>

  <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>


<div class="well">
<div class="row">
    <% @movies.each do |movie| %>
<div class="col-sm-6 col-md-3">

<div class="thumbnail">

      <%= link_to (image_tag movie.image.url(:medium), class: "image"), movie %>

      </div>
      </div>
      <% end %>
</div>
</div>
